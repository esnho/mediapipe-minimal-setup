{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "es2019",
    ],
    "jsx": "react",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}